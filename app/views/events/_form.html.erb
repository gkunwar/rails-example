<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :evebt_date %>
    <%= f.date_select :evebt_date %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :status %>
    <%= f.select :status, ["Pending", "Published"] %>
  </div>

  <div class="field">
    <%= f.label :location %>
    <%= f.collection_select :location_id, Location.all, :id, :name
 %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
